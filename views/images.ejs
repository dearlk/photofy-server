<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>photofy</title>
  </head>
<style>
  * {
    box-sizing: border-box;
  }
  
  body {
    margin: 0;
    font-family: Arial;
  }
  
  .header {
    text-align: center;
    padding: 32px;
  }
  
  .row {
    display: flex;
    flex-wrap: wrap;
    padding: 0 4px;
  }
  
  /* Create four equal columns that sits next to each other */
  .column {
    flex: 25%;
    max-width: 25%;
    padding: 0 4px;
  }
  
  .column img {
    margin-top: 8px;
    vertical-align: middle;
    filter: grayscale(100%);
  }
  .column img:hover,:focus {
    margin-top: 8px;
    vertical-align: middle;
    filter: grayscale(0%);
  }

  /* Responsive layout - makes a two column-layout instead of four columns */
  @media screen and (max-width: 800px) {
    .column {
      flex: 50%;
      max-width: 50%;
    }
  }
  
  /* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
  @media screen and (max-width: 600px) {
    .column {
      flex: 100%;
      max-width: 100%;
    }
  }
  </style>

<body>
  <%
  let row=data[0];
  let col=data[1];
  let ppc=data[2]
  let images=data[3];
  var counter=0;
  %>
<!-- Header -->
<!-- Photo Grid -->
<%_ for(var r=0; r<row; r++) { -%>
    <div class="row"> 
      <%_ for(var c=0; c<col; c++) { -%>
          <div class="column">
            <%_ for(var i=0; i<ppc; i++){ -%>
                <img src="<%=images[counter].image%>" style="width:100%">
              <%_ counter++;-%>
            <%_} -%>
          </div>
      <%_ } -%>
    </div>
<%_ } -%>

</body>
</html>
